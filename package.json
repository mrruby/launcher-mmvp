{
	"name": "launcher",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepare": "pnpm -r run build && mkdir -p webhapps && pnpm download:devhub && pnpm download:appstore",
		"download:devhub": "mkdir -p webhapps && curl -L --output webhapps/DevHub.webhapp https://github.com/holochain/devhub-gui/releases/download/v0.16.1/devhub.webhapp",
		"download:appstore": "mkdir -p webhapps && curl -L --output webhapps/AppStore.webhapp https://github.com/holochain/app-store-gui/releases/download/v0.4.0/appstore.webhapp"
	},
	"devDependencies": {
		"@skeletonlabs/skeleton": "2.2.0",
		"@skeletonlabs/tw-plugin": "0.2.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.20.4",
		"@tauri-apps/cli": "^1.5.2",
		"@types/node": "20.8.2",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "10.4.16",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "8.4.31",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tailwindcss": "3.3.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vite-plugin-tailwind-purgecss": "0.1.3",
		"zod": "^3.22.4"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "1.5.3",
		"@holochain/client": "^0.16.2",
		"@holochain/launcher-api": "file:./api",
		"@sveltestack/svelte-query": "^1.6.0",
		"@tauri-apps/api": "^1.5.0"
	}
}
