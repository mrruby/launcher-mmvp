{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"package": {
		"productName": "Holochain Launcher Beta 2",
		"version": "0.11.1"
	},
	"build": {
		"beforeBuildCommand": "pnpm build",
		"beforeDevCommand": "pnpm dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"window": {
				"setSize": true
			},
			"clipboard": {
				"writeText": true
			},
			"dialog": {
				"all": true
			},
			"shell": {
				"open": true
			}
		},
		"cli": {
			"description": "Running the Holochain Launcher from the command line",
			"args": [
				{
					"name": "profile",
					"takesValue": true,
					"multiple": false
				}
			]
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "holochain-launcher-0.2",
			"publisher": "Holochain Foundation",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"resources": [
				"icons/icon_priority_high_32x32.png",
				"icons/icon_priority_medium_32x32.png",
				"icons/32x32.png"
			],
			"externalBin": ["bins/holochain-v0.2.2", "bins/lair-keystore-v0.3.0"],
			"copyright": "",
			"category": "DeveloperTool",
			"shortDescription": "",
			"longDescription": "",
			"deb": {
				"depends": []
			},
			"macOS": {
				"frameworks": [],
				"minimumSystemVersion": "",
				"exceptionDomain": "",
				"signingIdentity": null,
				"entitlements": "entitlements.plist"
			}
		},
		"systemTray": {
			"iconPath": "icons/icon.png"
		},
		"security": {
			"csp": null,
			"dangerousDisableAssetCspModification": true
		},
		"updater": {
			"active": true,
			"endpoints": [
				"https://s3.eu-central-2.wasabisys.com/holochain-launcher/automatic-updates/updater_0_2.json",
				"https://drive.switch.ch/index.php/s/gTcgvbHAJPA56xA/download"
			],
			"dialog": true,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI3RkNGRjMxMDQ0QTg0RDEKUldUUmhFb0VNZi84SnluN2J3N0hHNkQrOHhvYmtnMXdLR1hKQ09Ja3c3eUNGYUgxUllDZlhNWmIK"
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "launcher",
				"width": 800
			}
		]
	}
}
